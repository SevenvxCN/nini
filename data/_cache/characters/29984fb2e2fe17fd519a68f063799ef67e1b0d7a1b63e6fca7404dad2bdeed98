,}):(\\\\\\\\d{2})[.:](\\\\\\\\d{2,3})\\\\\\\\]/g;\\n\\n                        const parse = text => {\\n                            if (!text) return [];\\n                            const lines = text.split('\\\\\\\\n');\\n                            const result = [];\\n                            for (const line of lines) {\\n                                let content = line.replace(timeRegex, '').trim();\\n                                if (!content) continue;\\n                                let match;\\n                                while ((match = timeRegex.exec(line)) !== null) {\\n                                    const time = parseInt(match[1])*60 + parseInt(match[2]) + parseInt(match[3].padEnd(3,'0'))/1000;\\n                                    if(!isNaN(time)) result.push({ time, content });\\n                                }\\n                            }\\n                            return result.sort((a,b) => a.time - b.time);\\n                        };\\n\\n                        const original = parse(lrcText);\\n                        const translated = parse(transText);\\n\\n                        self.postMessage({ original, translated });\\n                    };\\n                `;\\n                const blob = new Blob([workerCode], { type: 'application/javascript' });\\n                const worker = new Worker(URL.createObjectURL(blob));\\n                worker.onmessage = e => {\\n                    STATE.lyrics.current = e.data.original;\\n                    STATE.lyrics.translated = e.data.translated;\\n                    if (STATE.lyrics.current.length === 0) updateLyricsUI('♪ (纯音乐或无歌词)');\\n                    else if (!STATE.audio.paused) syncLyrics(STATE.audio.currentTime, true);\\n                };\\n                return worker;\\n            } catch (e) {\\n                console.error(\\\"Worker setup failed:\\\", e);\\n                return null;\\n            }\\n        }\\n\\n        function updateLyricsUI(mainText, transText = '') {\\n            requestAnimationFrame(() => {\\n                const currentMain = DOM.lyricsArea.querySelector('.lyrics-line');\\n                const currentTrans = DOM.lyricsArea.querySelector('.lyrics-translation');\\n\\n                if (currentMain) currentMain.classList.add('exiting');\\n                if (currentTrans) currentTrans.classList.add('exiting');\\n\\n                setTimeout(() => {\\n                    DOM.lyricsArea.innerHTML = ''; // Clear after fade out\\n\\n                    const newMain = document.createElement('div');\\n                    newMain.className = 'lyrics-line';\\n                    newMain.textContent = mainText;\\n                    DOM.lyricsArea.appendChild(newMain);\\n\\n                    if (transText) {\\n                        const newTrans = document.createElement('div');\\n                        newTrans.className = 'lyrics-translation';\\n                        newTrans.textContent = transText;\\n                        DOM.lyricsArea.appendChild(newTrans);\\n                    }\\n\\n                    setTimeout(() => {\\n                       newMain.classList.add('active');\\n                       if (transText) {\\n                           const transEl = DOM.lyricsArea.querySelector('.lyrics-translation');\\n                           if(transEl) transEl.classList.add('active');\\n                       }\\n                    }, 50);\\n\\n                }, 400);\\n            });\\n        }\\n\\n        function findLyricIndex(currentTime) {\\n            if (STATE.lyrics.current.length === 0) return -1;\\n            let i = STATE.lyrics.current.length - 1;\\n            while (i >= 0) {\\n                if (currentTime >= STATE.lyrics.current[i].time) return i;\\n                i--;\\n            }\\n            return -1;\\n        }\\n\\n        function syncLyrics(currentTime, forceUpdate = false) {\\n            const newIndex = findLyricInd