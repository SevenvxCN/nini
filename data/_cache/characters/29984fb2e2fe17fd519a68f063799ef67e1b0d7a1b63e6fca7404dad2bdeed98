.showTranslation = !STATE.lyrics.showTranslation;\\n            DOM.translationToggle.classList.toggle('active', STATE.lyrics.showTranslation);\\n            if(STATE.lyrics.activeIndex !== -1) syncLyrics(STATE.audio.currentTime, true); // Force UI update\\n        });\\n\\n        DOM.playbackModeToggle.addEventListener('click', () => {\\n            const icon = DOM.playbackModeToggle.querySelector('i');\\n            if(STATE.ui.playbackMode === 'single'){\\n                STATE.ui.playbackMode = 'sequence';\\n                icon.className = 'fas fa-repeat';\\n                DOM.playbackModeToggle.title = '顺序播放';\\n            } else {\\n                STATE.ui.playbackMode = 'single';\\n                icon.className = 'fas fa-1';\\n                DOM.playbackModeToggle.title = '单曲循环';\\n            }\\n        });\\n\\n        // 音量控制事件\\n        DOM.volumeSlider.addEventListener('input', (e) => {\\n            const volume = e.target.value / 100;\\n            setGlobalVolume(volume);\\n        });\\n\\n        DOM.volumeBtn.addEventListener('click', () => {\\n            if (window.globalVolume === 0) {\\n                setGlobalVolume(1.0); // 从静音恢复到100%\\n            } else {\\n                setGlobalVolume(0); // 静音\\n            }\\n        });\\n\\n        // --- API & UTILITIES ---\\n        const Http_Get = url => new Promise(r => $.ajax({ url, method: 'GET', timeout: 5000, success:d=>r(d), error:()=>r(null) }));\\n        const checkAudioAvailability = url => new Promise(res => { const t=new Audio();t.src=url; const id=setTimeout(()=>c(false),2000); const c=r=>{clearTimeout(id);res(r);}; t.oncanplaythrough=()=>c(true); t.onerror=()=>c(false); });\\n\\n        async function fetchLyrics(id, source) {\\n            if (!lyricsWorker || !id || !source) return;\\n            const url = source === 'netease' ? `https://api.vkeys.cn/v2/music/netease/lyric?id=${id}` : `https://api.vkeys.cn/v2/music/tencent/lyric?id=${id}`;\\n            const res = a