                <!-- 任务记录（拆分为三个独立卡片） -->\\n                    <div class=\\\"script-item\\\">\\n                        <span class=\\\"item-label\\\">任务记录</span>\\n                        <div class=\\\"task-container\\\">\\n                            <!-- 主线任务卡片 -->\\n                            <div class=\\\"task-card main-task\\\">\\n                                <div class=\\\"task-title\\\">\\n                                    <i class=\\\"fa fa-flag-checkered\\\"></i>主线任务\\n                                </div>\\n                                <div class=\\\"task-content\\\" id=\\\"status-main-task\\\">\\n                                    <span class=\\\"task-empty\\\">暂无主线任务</span>\\n                                </div>\\n                            </div>\\n                            <!-- 支线任务卡片 -->\\n                            <div class=\\\"task-card side-task\\\">\\n                                <div class=\\\"task-title\\\">\\n                                    <i class=\\\"fa fa-cubes\\\"></i>支线任务\\n                                </div>\\n                                <div class=\\\"task-content\\\" id=\\\"status-side-task\\\">\\n                                    <span class=\\\"task-empty\\\">暂无支线任务</span>\\n                                </div>\\n                            </div>\\n                            <!-- 极限任务卡片 -->\\n                            <div class=\\\"task-card limit-task\\\">\\n                                <div class=\\\"task-title\\\">\\n                                    <i class=\\\"fa fa-bolt\\\"></i>极限任务\\n                                </div>\\n                                <div class=\\\"task-content\\\" id=\\\"status-limit-task\\\">\\n                                    <span class=\\\"task-empty\\\">暂无极限任务</span>\\n                                </div>\\n                            </div>\\n                        </div>\\n                    </div>\\n                </div>\\n            </