(alternativeMatch && alternativeMatch[1]) {\\n            const extractedName = alternativeMatch[1].trim();\\n            console.log('通过替代格式提取到角色名称:', extractedName);\\n            return extractedName;\\n        }\\n        \\n        console.warn('未能从角色卡内容中提取到角色名称');\\n        return null;\\n    }\\n\\n    // 创建角色世界书条目\\n    async function createCharacterWorldbook(characterName, characterContent) {\\n        console.log('createCharacterWorldbook 函数被调用');\\n        console.log('用户输入的角色名称:', characterName);\\n        console.log('内容长度:', characterContent.length);\\n        \\n        // 从AI回复中提取实际的角色名称\\n        const extractedName = extractCharacterNameFromContent(characterContent);\\n        const finalCharacterName = extractedName || characterName; // 如果提取失败，使用用户输入的名称\\n        \\n        console.log('最终使用的角色名称:', finalCharacterName);\\n        \\n        const bookName = '欲望世界·完全重制版';\\n        const entryName = `【人设-${finalCharacterName}】`;\\n        \\n        console.log('世界书名:', bookName);\\n        console.log('条目名:', entryName);\\n        \\n        try {\\n            console.log('开始检查现有世界书条目...');\\n            // 检查世界书是否已有同名条目\\n            const existingWorldbook = await TavernHelper.getLorebookEntries(bookName);\\n            console.log('获取到的世界书条目数量:', existingWorldbook.length);\\n            console.log('现有条目列表:', existingWorldbook.map(entry => entry.comment));\\n            \\n            const existingEntry = existingWorldbook.find(entry => entry.comment === entryName);\\n            \\n            if (existingEntry) {\\n                console.log('找到同名条目，跳过创建');\\n                alert(`世界书中已存在同名角色\\\"${characterName}\\\"，跳过创建。`);\\n                return;\\n            }\\n            \\n            console.log('开始创建新条目...');\\n            \\n            // 检查是否有createWorldbookEntries函数可用\\n            if (typeof createWorldbookEntries === 'function') {\\n                console.log('使用createWorldbookEntries创建条目');\\n                const worl