\n                resetPlayerState();\\n            }\\n        }\\n\\n        function resetPlayerState() {\\n            STATE.audio.pause();\\n            STATE.audio.src = '';\\n            STATE.nowPlaying = { name: null, source: null, id: null };\\n            STATE.lyrics = { current: [], translated: [], showTranslation: STATE.lyrics.showTranslation, activeIndex: -1 };\\n            updateUI(false);\\n            updateLyricsUI('...');\\n            DOM.progressBar.style.width = '0%';\\n        }\\n\\n        function updateUI(isPlaying) {\\n            if(isPlaying){\\n                DOM.playIcon.style.display = 'none';\\n                DOM.pauseIcon.style.display = 'block';\\n            } else {\\n                DOM.playIcon.style.display = 'block';\\n                DOM.pauseIcon.style.display = 'none';\\n            }\\n        }\\n\\n        function updateSourceInfo(text) {\\n            DOM.sourceInfo.textContent = text;\\n            DOM.sourceInfo.style.opacity = '1';\\n            setTimeout(() => { DOM.sourceInfo.style.opacity = '0'; }, 2000);\\n        }\\n\\n        // --- VOLUME CONTROL FUNCTIONS ---\\n        function updateVolumeUI() {\\n            const volume = window.globalVolume;\\n            DOM.volumeSlider.value = Math.round(volume * 100);\\n            \\n            // 更新音量按钮图标\\n            const volumeIcon = DOM.volumeBtn.querySelector('i');\\n            if (volume === 0) {\\n                volumeIcon.className = 'fas fa-volume-mute';\\n            } else if (volume < 0.5) {\\n                volumeIcon.className = 'fas fa-volume-down';\\n            } else {\\n                volumeIcon.className = 'fas fa-volume-up';\\n            }\\n        }\\n\\n        function setGlobalVolume(volume) {\\n            window.globalVolume = volume;\\n            \\n            // 广播音量变化到所有实例\\n            audioChannel.postMessage({ \\n                command: 'volume_change', \\n                volume: volume, \\n                id: ins