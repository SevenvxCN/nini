   </div>\\n    </div>\\n</div>\\n\\n<!-- 角色添加弹窗 -->\\n<div id=\\\"characterModal\\\" class=\\\"modal\\\">\\n    <div class=\\\"modal-content\\\">\\n        <div class=\\\"modal-header\\\">\\n            <h3 class=\\\"modal-title\\\">添加角色到世界书</h3>\\n            <span class=\\\"close\\\" onclick=\\\"closeCharacterModal()\\\">&times;</span>\\n        </div>\\n        <div class=\\\"form-group\\\">\\n            <label for=\\\"characterName\\\" class=\\\"form-label\\\">角色名称</label>\\n            <input type=\\\"text\\\" id=\\\"characterName\\\" class=\\\"form-input\\\" placeholder=\\\"请输入角色名称\\\">\\n            <div class=\\\"form-hint\\\">输入您想添加到世界书的角色名称，系统将自动生成角色设定并写入世界书<br>注意1：因当前AI智力问题原因，可能会导致写入失败，如失败请重试。<br>注意2：请勿在关键环节进行此操作，如剧本选择环节或剧本详情生成环节。</div>\\n        </div>\\n        <div class=\\\"modal-buttons\\\">\\n            <button class=\\\"modal-button secondary\\\" onclick=\\\"closeCharacterModal()\\\">取消</button>\\n            <button class=\\\"modal-button primary\\\" id=\\\"submitCharacterBtn\\\" onclick=\\\"console.log('发送按钮被点击'); submitCharacter();\\\">发送</button>\\n        </div>\\n    </div>\\n</div>\\n<script>\\n    (function() {\\n        const canvas = document.getElementById('particle-container');\\n        if (!canvas) return;\\n        const ctx = canvas.getContext('2d');\\n        let particles = [];\\n        let animationFrameId;\\n        function resizeCanvas() {\\n            const container = canvas.parentElement;\\n            if (!container) return;\\n            canvas.width = container.offsetWidth;\\n            canvas.height = container.offsetHeight;\\n            particles = [];_initParticles();\\n        }\\n        window.addEventListener('resize', resizeCanvas, false);\\n        class Particle {\\n            constructor() {\\n                const container = canvas.parentElement;\\n                this.x = Math.random() * container.offsetWidth;\\n                this.y = Math.random() * container.offsetHeight;\\n                this.vx = (Math.random() - 0.5) * 0.3;\\n                this.vy = (Math.random() - 0.5) * 0.3;\\n                this.radius = Math.random() * 1.2 + 0.5;\\n                this.color = Math.random() > 0.5 ? 'rgba(129, 140, 248, 0.9)' : 'rgba(244, 114, 182, 0.9)';\\n            }\\n            update() { this.x += this.vx; this.y += this.vy; if (this.x < 0 || this.x > canvas.width) this.vx *= -1; if (this.y < 0 || this.y > canvas.height) this.vy *= -1; }\\n            draw() { ctx.beginPath(); ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2); ctx.fillStyle = this.color; ctx.fill(); }\\n        }\\n        function _initParticles() {\\n            const particleCount = Math.floor(canvas.width * canvas.height / 20000);\\n            for (let i = 0; i < Math.max(20, particleCount); i++) { particles.push(new Particle()); }\\n        }\\n        function animate() { ctx.clearRect(0, 0, canvas.width, canvas.height); particles.forEach(p => { p.update(); p.draw(); }); animationFrameId = requestAnimationFrame(animate); }\\n        resizeCanvas();animate();\\n    })();\\n\\n    function switchTab(event, pageName) {\\n        document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));\\n        document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));\\n        document.getElementById(pageName).classList.add('active');\\n        event.currentTarget.classList.add('active');\\n    }\\n\\n    /**\\n     * 安全获取值的函数，支持各种数据类型\\n     * @param {*} obj - 要查询的对象\\n     * @param {string} path - 路径，如 'a.b.0'\\n     * @param {*} defaultValue - 默认值\\n     * @returns {*} 获取到的值或默认值\\n     */\\n    function SafeGetValue(obj, path, defaultValue = \\\"N/A\\\") {\\n        // 如果路径无效，直接返回默认值\\n        if (typeof path !== 'string' || path.trim() === '') return defaultValue;\\n        \\n        // 如果对象本身就是基本类型，直接返回\\n        if (obj === null || typeof obj !== 'object') {\\n            return obj !== undefined ? obj : defaultValue;\\n        }\\n        \\n        let keys = path.split('.');\\n        let current = obj;\\n        \\n        for (let i = 0; i < keys.length; i++) {\\n            // 如果当前值不是对象/数组，尝试获取其属性\\n            if (current === null || current === undefined) {\\n                return defaultValue;\\n            }\\n            \\n            // 处理数组索引\\n            const key = keys[i];\\n            if (Array.isArray(current)) {\\n                const index = parseInt(key, 10);\\n                if (!isNaN(index) && index >= 0 && index < current.length) {\\n                    current = current[index];\\n                } else {\\n                    // 索引无效，尝试将数组转为字符串\\n                    return current.join(', ') || defaultValue;\\n                }\\n            } \\n            // 处理对象\\n            else if (typeof current === 'object' && current.hasOwnProperty(key)) {\\n                current = current[key];\\n            } \\n            // 处理其他类型\\n            else {\\n                // 尝试将当前值转为字符串\\n                return String(current) || defaultValue;\\n            }\\n        }\\n        \\n        // 最终值处理\\n        if (current === undefined || current === null) {\\n            return defaultValue;\\n        }\\n        \\n        // 处理特殊类型\\n        if (typeof current === 'boolean') {\\n            return current ? '是' : '否';\\n        }\\n        \\n        // 处理数组\\n        if (Array.isArray(current)) {\\n            return current.length > 0 ? current[0] : defaultValue;\\n        }\\n        \\n        // 处理对象\\n        if (typeof current === 'object') {\\n            // 尝试获取对象的第一个属性值\\n            const values = Object.values(current);\\n            return values.length > 0 ? values[0] : defaultValue;\\n        }\\n        \\n        return current;\\n    }\\n\\n    /**\\n     * 格式化文本，处理各种数据类型\\n     * @param {*} text - 要格式化的文本\\n     * @returns {string} 格式化后的HTML字符串\\n     */\\n    function formatWithSeparators(text) {\\n        // 处理null/undefined\\n        if (text === null || text === undefined) {\\n            return '（暂无数据）';\\n        }\\n        \\n        // 处理布尔值\\n        if (typeof text === 'boolean') {\\n            return text ? '是' : '否';\\n        }\\n        \\n        // 处理数组\\n        if (Array.isArray(text)) {\\n            return text.map(item => String(item).trim()).filter(l => l).join('<br>') || '（暂无数据）';\\n        }\\n        \\n        // 处理对象\\n        if (typeof text === 'object') {\\n            try {\\n                // 尝试将对象转为字符串数组\\n                const values = Object.values(text).map(v => String(v));\\n                return values.join('<br>') || '（对象数据）';\\n            } catch (e) {\\n                return '（对象数据）';\\n            }\\n        }\\n        \\n        // 处理字符串\\n        if (typeof text === 'string') {\\n            return text.split('|||').map(l => l.trim()).filter(l => l).join('<br>') || '（暂无数据）';\\n        }\\n        \\n        // 处理其他基本类型\\n        return String(text);\\n    }\\n\\n    function updateHotnessEffect(hotValueString) {\\n        const container = document.getElementById('hot-value-container');\\n        if (!container) return;\\n\\n        let numericValue = 0;\\n        // 确保处理的值是字符串\\n        const s = String(hotValueString || '0').toLowerCase();\\n        const numPart = parseFloat(s.replace(/,/g, ''));\\n        if (!isNaN(numPart)) {\\n            if (s.includes('b') || s.includes('g')) {\\n                numericValue = numPart * 1e9;\\n            } else if (s.includes('m')) {\\n                numericValue = numPart * 1e6;\\n            } else if (s.includes('k') || s.includes('w')) {\\n                numericValue = numPart * (s.includes('w') ? 1e4 : 1e3);\\n            } else {\\n                numericValue = numPart;\\n            }\\n        }\\n\\n        container.classList.remove('hot-level-1', 'hot-level-2', 'hot-level-3', 'hot-level-4');\\n        if (numericValue >= 1e8) container.classList.add('hot-level-4');\\n        else if (numericValue >= 1e7) container.classList.add('hot-level-3');\\n        else if (numericValue >= 1e6) container.classList.add('hot-level-2');\\n        else if (numericValue >= 1e4) container.classList.add('hot-level-1');\\n    }\\n\\n    async function initDisplay() {\\n        try {\\n            const messages = typeof getChatMessages === 'function' ? await getChatMessages(getCurrentMessageId()) : [];\\n            if (!messages || !messages[0] || !messages[0].data || !messages[0].data.stat_data) {\\n                document.getElementById('live-room-name').innerText = \\\"无法加载状态数据\\\"; return;\\n            }\\n            const allData = messages[0].data.stat_data;\\n\\n            // 直播间数据加载\\n            const liveKey = '直播间';\\n            if (allData[liveKey]) {\\n                const live = allData[liveKey];\\n                document.getElementById('live-room-name').innerText = SafeGetValue(live, '房间名.0', '未知房间');\\n                const hotValue = SafeGetValue(live, '热度.0', '0');\\n                document.getElementById('live-hot-value').innerText = hotValue;\\n                updateHotnessEffect(hotValue);\\n                document.getElementById('live-danmaku-list').innerHTML = formatWithSeparators(SafeGetValue(live, '弹幕列表', ''));\\n            } else { document.getElementById('live-room-name').innerText = \\\"直播间数据缺失\\\"; }\\n\\n            // 状态栏数据加载\\n            const statusKey = '状态栏';\\n            if (allData[statusKey]) {\\n                const status = allData[statusKey];\\n                // 个人信息\\n                document.getElementById('status-name').innerText = SafeGetValue(status, '名称', '未知角色');\\n                const currentScore = SafeGetValue(status, '可用分数', '可用分数：0');\\n                document.getElementById('status-score').innerText = currentScore;\\n                const totalScore = SafeGetValue(status, '累计分数', '累计分数：0');\\n                document.getElementById('status-total-score').innerText = totalScore;\\n                document.getElementById('status-rank').innerText = SafeGetValue(status, '欲望世界排名', '暂无排名');\\n                document.getElementById('status-script').innerText = SafeGetValue(status, '当前剧本', '未进入剧本');\\n\\n                // 任务记录\\n                const mainTask = SafeGetValue(status, '主线任务', '');\\n                const sideTask = SafeGetValue(status, '支线任务', '');\\n                const limitTask = SafeGetValue(status, '极限任务', '');\\n\\n                // 渲染主线任务\\n                if (String(mainTask).trim() && String(mainTask) !== '无') {\\n                    document.getElementById('status-main-task').innerHTML = formatWithSeparators(mainTask);\\n                } else {\\n                    document.getElementById('status-main-task').innerHTML = '<span class=\\\"task-empty\\\">暂无主线任务</span>';\\n                }\\n\\n                // 渲染支线任务\\n                if (String(sideTask).trim() && String(sideTask) !== '无') {\\n                    document.getElementById('status-side-task').innerHTML = formatWithSeparators(sideTask);\\n                } else {\\n                    document.getElementById('status-side-task').innerHTML = '<span class=\\\"task-empty\\\">暂无支线任务</span>';\\n                }\\n\\n                // 渲染极限任务\\n                if (String(limitTask).trim() && String(limitTask) !== '无') {\\n                    document.getElementById('status-limit-task').innerHTML = formatWithSeparators(limitTask);\\n                } else {\\n                    document.getElementById('status-limit-task').innerHTML = '<span class=\\\"task-empty\\\">暂无极限任务</span>';\\n                }\\n\\n            } else {\\n                // 数据缺失时的默认显示\\n                ['status-name', 'status-score', 'status-total-score', 'status-rank', 'status-script'].forEach(id => {\\n                    document.getElementById(id).innerText = \\\"数据缺失\\\";\\n                });\\n                document.getElementById('status-main-task').innerHTML = '<span class=\\\"task-empty\\\">任务数据缺失</span>';\\n                document.getElementById('status-side-task').innerHTML = '<span class=\\\"task-empty\\\">任务数据缺失</span>';\\n                document.getElementById('status-limit-task').innerHTML = '<span class=\\\"task-empty\\\">任务数据缺失</span>';\\n            }\\n        } catch (error) {\\n            console.error(`状态栏加载出错: ${error.message}`, error);\\n            const container = document.querySelector('.status-container');\\n            if (container) container.innerHTML = `<div style='padding: 20px; color: red;'>状态栏加载出错: ${error.message}</div>`;\\n        }\\n    }\\n\\n    // 模拟数据（包含各种数据类型用于测试）\\n    if (typeof getChatMessages === 'undefined' || typeof getCurrentMessageId === 'undefined') {\\n        const mockData = {\\n            stat_data: {\\n                \\\"状态栏\\\": { \\n                    \\\"名称\\\": \\\"测试角色\\\", // 字符串类型（原数组）\\n                    \\\"可用分数\\\": { value: \\\"可用分数：1024\\\" }, // 对象类型（原数组）\\n                    \\\"累计分数\\\": [\\\"累计分数：8192\\\"], // 原始数组类型\\n                    \\\"欲望世界排名\\\": true, // 布尔类型（原数组）\\n                    \\\"当前剧本\\\": [\\\"新手教程剧本《家中的欲望》2人本\\\"],\\n                    \\\"主线任务\\\": [\\\"1. 探索客厅找到隐藏的欲望手册\\\", \\\"2. 与队友完成角色身份确认\\\", \\\"3. 破解书房密码锁获取关键线索\\\"], // 数组类型\\n                    \\\"支线任务\\\": \\\"1. 帮助NPC修复损坏的通讯设备|||2. 收集3个隐藏的纪念品（已收集2/3）\\\", // 字符串类型（原数组）\\n                    \\\"极限任务\\\": { step1: \\\"1. 在10分钟内逃离起火的卧室\\\", step2: \\\"2. 不使用道具击败1只精英怪物（未完成）\\\" } // 对象类型（原数组）\\n                },\\n                \\\"直播间\\\": { \\n                    \\\"房间名\\\": [\\\"[LIVE] 家中的欲望 - 新手教程\\\"],\\n                    \\\"热度\\\": 12300, // 数字类型（原字符串）\\n                    \\\"弹幕列表\\\": [\\\"[21:03:15] 主播快找手册！\\\", \\\"[21:03:20] 支线任务的纪念品在厨房！\\\", \\\"[21:03:22] 极限任务小心怪物！\\\"]\\n                }\\n            }\\n        };\\n        async function getChatMessages(id) { return [{ data: mockData }]; } \\n        function getCurrentMessageId() { return 'mock'; }\\n        console.warn(\\\"SillyTavern environment not detected. Using mock data for display.\\\");\\n    }\\n\\n    /**\\n     * 自动写入世界书逻辑（静默执行）\\n     */\\n    async function autoWriteToLorebook() {\\n        const endTag = '</剧本详情>';\\n        const startTag = '<剧本详情>';\\n        \\n        // 检查SillyTavern API是否可用\\n        if (typeof TavernHelper === 'undefined' || typeof getCurrentMessageId === 'undefined' || typeof getChatMessages === 'undefined') {\\n            return; // 静默失败，不显示任何提示\\n        }\\n\\n        try {\\n            const currentMessageId = getCurrentMessageId();\\n            if (currentMessageId === null) {\\n                return; // 静默失败\\n            }\\n            \\n            const messages = await getChatMessages(currentMessageId);\\n            const lastMessage = messages.length > 0 ? messages[messages.length - 1] : null;\\n\\n            if (!lastMessage || !lastMessage.message) {\\n                return; // 静默失败\\n            }\\n\\n            const aiResponse = lastMessage.message;\\n            let characterCardContent = null;\\n            \\n            // 从末尾开始查找结束标签\\n            const lastEndTagIndex = aiResponse.lastIndexOf(endTag);\\n            // 如果找到了结束标签，再从它之前的位置开始查找开始标签\\n            const lastStartTagIndex = lastEndTagIndex !== -1 ? aiResponse.lastIndexOf(startTag, lastEndTagIndex) : -1;\\n            \\n            // 确保找到了成对的标签，如果只找到一个标签则静默失败\\n            if (lastStartTagIndex !== -1 && lastEndTagIndex !== -1 && lastStartTagIndex < lastEndTagIndex) {\\n                characterCardContent = aiResponse.substring(lastStartTagIndex, lastEndTagIndex + endTag.length).trim();\\n            }\\n\\n            if (characterCardContent) {\\n                const bookName = '欲望世界·完全重制版';\\n                const entryName = '【当前剧本】';\\n                \\n                const allEntries = await TavernHelper.getLorebookEntries(bookName);\\n                const targetEntry = allEntries.find(entry => entry.comment === entryName);\\n                \\n                if (targetEntry) {\\n                    await TavernHelper.setLorebookEntries(bookName, [{ uid: targetEntry.uid, content: characterCardContent }]);\\n                    // 静默成功，不显示任何提示\\n                }\\n            }\\n        } catch (error) {\\n            // 静默失败，不显示任何提示\\n            console.error('Auto write to lorebook failed:', error);\\n        }\\n    }\\n\\n    /**\\n     * 管理世界书文风条目\\n     * @param {string} style - 'intellectual'为智斗文风，'pure'为纯色文风\\n     */\\n    async function manageStyleWorldbooks(style) {\\n        try {\\n            if (typeof getCharWorldbookNames !== 'function' || typeof updateWorldbookWith !== 'function') {\\n                console.log('Tavern Helper worldbook functions not available. Skipping worldbook management.');\\n                return;\\n            }\\n\\n            const charBooks = getCharWorldbookNames('current');\\n            const allBookNames = [charBooks.primary, ...charBooks.additional].filter(Boolean);\\n\\n            if (allBookNames.length === 0) {\\n                console.log('没有找到绑定的世界书，跳过世界书管理。');\\n                return;\\n            }\\n\\n            const isIntellectual = style === 'intellectual';\\n            console.log(`开始切换到${isIntellectual ? '智斗' : '纯色'}文风...`);\\n\\n            for (const bookName of allBookNames) {\\n                await updateWorldbookWith(bookName, entries => {\\n                    return entries.map(entry => {\\n                        // 智斗文风：禁用💗条目，启用🥸条目\\n                        if (isIntellectual) {\\n                            if (entry.name.includes('💗')) {\\n                                return { ...entry, enabled: false };\\n                            }\\n                            if (entry.name.includes('🥸')) {\\n                                return { ...entry, enabled: true };\\n                            }\\n                        }\\n                        // 纯色文风：禁用🥸条目，启用💗条目\\n                        else {\\n                            if (entry.name.includes('🥸')) {\\n                                return { ...entry, enabled: false };\\n                            }\\n                            if (entry.name.includes('💗')) {\\n                                return { ...entry, enabled: true };\\n                            }\\n                        }\\n                        // 其他条目保持不变\\n                        return entry;\\n                    });\\n                });\\n                console.log(`世界书 '${bookName}' 的文风条目已切换到${isIntellectual ? '智斗' : '纯色'}文风。`);\\n            }\\n\\n            // 显示操作结果提示\\n            if (typeof toastr === 'object' && typeof toastr.info === 'function') {\\n                toastr.info(`文风已切换到${isIntellectual ? '智斗' : '纯色'}文风：相关世界书条目已自动调整。`, '文风设置');\\n            }\\n        } catch (error) {\\n            console.error('更新世界书时发生错误:', error);\\n        }\\n    }\\n\\n    /**\\n     * 管理世界书美化条目\\n     * @param {boolean} enable - true为启用，false为禁用\\n     */\\n    async function manageBeautifyWorldbooks(enable) {\\n        try {\\n            if (typeof getCharWorldbookNames !== 'function' || typeof updateWorldbookWith !== 'function') {\\n                console.log('Tavern Helper worldbook functions not available. Skipping worldbook management.');\\n                return;\\n            }\\n\\n            const charBooks = getCharWorldbookNames('current');\\n            const allBookNames = [charBooks.primary, ...charBooks.additional].filter(Boolean);\\n\\n            if (allBookNames.length === 0) {\\n                console.log('没有找到绑定的世界书，跳过世界书管理。');\\n                return;\\n            }\\n\\n            console.log(`开始${enable ? '启用' : '禁用'}美化世界书条目...`);\\n\\n            for (const bookName of allBookNames) {\\n                await updateWorldbookWith(bookName, entries => {\\n                    return entries.map(entry => {\\n                        // 只处理包含📙符号的条目\\n                        if (entry.name.includes('📙')) {\\n                            return { ...entry, enabled: enable };\\n                        }\\n                        // 其他条目保持不变\\n                        return entry;\\n                    });\\n                });\\n                console.log(`世界书 '${bookName}' 的美化条目已${enable ? '启用' : '禁用'}。`);\\n            }\\n\\n            // 显示操作结果提示\\n            if (typeof toastr === 'object' && typeof toastr.info === 'function') {\\n                let message = `美化功能已${enable ? '开启' : '关闭'}：相关世界书条目已自动${enable ? '启用' : '禁用'}。`;\\n                if (!enable) {\\n                    message += ' 请使用hide指令隐藏前文，避免AI学习持续生成美化';\\n                }\\n                toastr.info(message, '美化设置');\\n            }\\n        } catch (error) {\\n            console.error('更新世界书时发生错误:', error);\\n        }\\n    }\\n\\n    document.addEventListener('DOMContentLoaded', () => {\\n        // 初始化显示数据\\n        initDisplay();\\n        \\n        // 自动执行写入世界书逻辑（静默）\\n        autoWriteToLorebook();\\n\\n        // 为美化按钮添加事件监听器\\n        document.getElementById('disable-beautify-btn').addEventListener('click', () => {\\n            manageBeautifyWorldbooks(false);\\n        });\\n\\n        document.getElementById('enable-beautify-btn').addEventListener('click', () => {\\n            manageBeautifyWorldbooks(true);\\n        });\\n\\n        // 为文风按钮添加事件监听器\\n        document.getElementById('intellectual-style-btn').addEventListener('click', () => {\\n            manageStyleWorldbooks('intellectual');\\n        });\\n\\n        document.getElementById('pure-style-btn').addEventListener('click', () => {\\n            manageStyleWorldbooks('pure');\\n        });\\n\\n        // 为添加角色按钮添加事件监听器\\n        const characterBtn = document.getElementById('character-record-btn');\\n        if (characterBtn) {\\n            characterBtn.addEventListener('click', () => {\\n                console.log('添加角色按钮被点击');\\n                openCharacterModal();\\n            });\\n        } else {\\n            console.error('未找